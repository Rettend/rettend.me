---
import Layout from '~/layouts/Layout.astro'
import { Button } from '~/components/ui/button'
import pp from '~/assets/pp.png'
import { Image } from 'astro:assets'
import { TextShuffle } from '~/components/TextShuffle'
---

<Layout>
  <main class="mx-auto max-w-5xl px-4 py-24 sm:px-6 lg:px-8">
    <div class="text-center">
      <Image
        src={pp}
        width={512}
        height={512}
        alt="Rettend's profile picture"
        class="mx-auto mb-8 size-48 rounded-full grayscale contrast-200 mix-blend-lighten transition-transform duration-300 hover:scale-105"
      />
      <TextShuffle
        client:visible
        as="h1"
        text="Rettend"
        hoverText="Hegyi Ãron Ferenc"
        class="text-4xl font-bold tracking-tight sm:text-6xl"
      />
      <p class="mt-6 text-lg leading-8 text-muted-foreground">
        {'{'} insert profound stuff here {'}'}
      </p>
    </div>

    <div class="mt-16 flex flex-wrap justify-center gap-4">
      <Button
        variant="outline"
        as="a"
        href="https://github.com/rettend"
        target="_blank"
      >
        <span class="i-ph:github-logo-duotone size-5"></span>
        Rettend
      </Button>
      <Button
        variant="outline"
        as="a"
        href="https://x.com/rettend1"
        target="_blank"
      >
        <span class="i-ph:x-logo-duotone size-5"></span>
        Rettend1
      </Button>
      <Button variant="outline" class="cursor-default hover:bg-transparent">
        <span class="i-ph:discord-logo-duotone size-5"></span>
        rettend
      </Button>
    </div>

    <div class="mt-24 text-center">
      <h2 class="text-2xl font-semibold">Stats</h2>
      <p class="mt-4 text-muted-foreground">
        [GitHub stats and contribution graph will be displayed here]
      </p>
    </div>
  </main>
</Layout>
