---
import Layout from '~/layouts/Layout.astro'
import { projects } from '~/lib/projects'
import { ProjectList } from '~/components/ProjectList'
---

<Layout>
  <main class="mx-auto max-w-7xl px-4 py-24 sm:px-6 lg:px-8">
    <div class="text-center">
      <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">My Work</h1>
      <p class="mt-4 text-lg text-muted-foreground">
        A collection of my projects, experiments, and open-source contributions.
      </p>
    </div>

    <div class="mt-16">
      <ProjectList {projects} client:load />
    </div>
  </main>
</Layout>
